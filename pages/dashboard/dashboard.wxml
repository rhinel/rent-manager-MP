
<!--dashboard.wxml-->
<view class="container dashboard page__bd">
  <view class="page__hd">
    <view class="page__title">Rent-Manager</view>
  </view>
  <view class="page__bd">
    <view class="weui-grids">
      <view class="weui-grid" hover-class="weui-grid_active">
        <view class="weui-grid__icon">
          {{count.houseCount || '0'}}户
        </view>
        <view class="weui-grid__label">房屋总数</view>
      </view>
      <view class="weui-grid" hover-class="weui-grid_active">
        <view class="weui-grid__icon">
          {{count.rentList1Count || '0'}}户
        </view>
        <view class="weui-grid__label">待收租金</view>
      </view>
      <view class="weui-grid" hover-class="weui-grid_active">
        <view class="weui-grid__icon">
          {{count.rentList3Count || '0'}}户
        </view>
        <view class="weui-grid__label">待交房东</view>
      </view>
      <view class="weui-grid" hover-class="weui-grid_active">
        <view class="weui-grid__icon">
          {{count.rentList1isToday || '0'}}户
        </view>
        <view class="weui-grid__label">今日待收</view>
      </view>
      <view class="weui-grid" hover-class="weui-grid_active">
        <view class="weui-grid__icon">
          {{count.rentList1CountMoney || '0'}}元
        </view>
        <view class="weui-grid__label">今日待收租金</view>
      </view>
      <view class="weui-grid" hover-class="weui-grid_active">
        <view class="weui-grid__icon">
          {{count.rentList3CountMoney || '0'}}元
        </view>
        <view class="weui-grid__label">今日待交房东</view>
      </view>
    </view>
  </view>
</view>